@model IEnumerable<VienShops.Models.DONHANG>

@{
	ViewBag.Title = "ManageOrder";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: white;margin-top: 20px ">QUẢN LÝ ĐƠN HÀNG</h2>
<div class="container_fullwidth">
	<div class="container">
		<table class="table" style="background-color: rgba(255, 255, 255, 0.8); margin-top: -90px; font-size:15px">
			<tr>
				<th>
					Ngày mua hàng
				</th>
				<th>
					Tình trạng
				</th>
				<th>
					Chính sách vẫn chuyển
				</th>
				<th>
					Ghi chú
				</th>
				<th>
					Tổng tiền
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.NGAYMUAHANG)
					</td>
					<td>
						@if (item.TINHTRANG == "1")
						{
							<p style="font-size: 15px"> Chưa giao</p>
						}
						@if (item.TINHTRANG == "2")
						{
							<p style="font-size: 15px"> Đang giao</p>
						}
						@if (item.TINHTRANG == "3")
						{
							<p style="font-size: 15px">Đã giao</p>
						}
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CHINHSACHVANCHUYEN)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.GHICHU)
					</td>
					<td>
						@String.Format("{0:0,0}",@item.TONGTIEN)
					</td>
					@*<td>
							@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
							@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
							@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
						</td>*@
				</tr>
			}

		</table>


	</div>
</div>
